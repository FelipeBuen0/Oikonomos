{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "globals": {
        "Inobag": true,
        "Session": true,
        "FeatureManager": true,
        "Ext": true,
        "Const": true,
        "CONFIG": true,
        "AppManager": true,
        "emailAddresses": true
    },
    "rules": {
        "no-irregular-whitespace": "error",
        "no-trailing-spaces": "error",
        "comma-dangle": ["error"],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": [
            "error"
        ]
    }
}
